<Window x:Class="MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memóriajáték" Height="450" Width="450">
    <Grid>
        <UniformGrid Name="CardGrid" Rows="4" Columns="4" />
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <TextBlock Name="TimerText" FontSize="16" Margin="0,5" />
            <Button Content="Új játék" Name="NewGameButton" Click="NewGameButton_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>
